<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"

    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <LinearLayout

        android:id="@+id/writtenList_ll"
        android:layout_width="match_parent"
        android:layout_height="100dp"
        android:background="@drawable/square_title_list_box"
        android:orientation="vertical"
        android:weightSum="3"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="2"
            android:weightSum="5"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/writtenList_ll_tv_title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="10dp"
                android:layout_weight="4"
                android:text="제목입니당!"
                android:textColor="#150000"
                android:textSize="20dp" />

            <ImageButton
                android:id="@+id/writtenList_ll_btn_delete"
                android:layout_width="wrap_content"
                android:layout_margin="7dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:background="#00FFFFFF"
                android:src="@android:drawable/ic_delete"
                />
        </LinearLayout>

        <TextView
            android:id="@+id/writtenList_ll_tv_date"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="10dp"
            android:layout_weight="1"
            android:text="2022년 1월 21일"
            android:textAlignment="viewEnd"
            android:textColor="#150000" />
    </LinearLayout>
</androidx.constraintlayout.widget.ConstraintLayout>