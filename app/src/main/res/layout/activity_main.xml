<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".activity.MainActivity">


   <androidx.viewpager2.widget.ViewPager2
       android:id="@+id/top_viewpager2"
       android:layout_width="match_parent"
       android:layout_height="300dp"
       app:layout_constraintEnd_toEndOf="parent"
       app:layout_constraintStart_toStartOf="parent"
       app:layout_constraintTop_toTopOf="parent" >

   </androidx.viewpager2.widget.ViewPager2>

   <com.google.android.material.tabs.TabLayout
       android:id="@+id/tabLayout"
       android:layout_width="wrap_content"
       android:layout_height="50dp"
       app:layout_constraintEnd_toEndOf="@+id/top_viewpager2"
       app:layout_constraintStart_toStartOf="@+id/top_viewpager2"
       app:layout_constraintTop_toBottomOf="@+id/top_viewpager2"
       app:tabBackground="@drawable/tab_selector"
       app:tabGravity="center"
       app:tabIndicatorHeight="0dp" />

   <Space
       android:layout_width="match_parent"
       android:layout_height="88dp"
       app:layout_constraintEnd_toEndOf="parent"
       app:layout_constraintStart_toStartOf="parent"
       app:layout_constraintTop_toBottomOf="@+id/tabLayout" />

   <com.google.android.material.bottomnavigation.BottomNavigationView
       android:layout_width="match_parent"
       android:layout_height="wrap_content"
       app:menu="@menu/bottom_nav"
       app:itemIconTint="@drawable/bottom_navi_selector_color"
       app:itemTextColor="@drawable/bottom_navi_selector_color"
       app:layout_constraintBottom_toBottomOf="parent"
       app:layout_constraintEnd_toEndOf="parent"
       app:layout_constraintStart_toStartOf="parent" />

</androidx.constraintlayout.widget.ConstraintLayout>